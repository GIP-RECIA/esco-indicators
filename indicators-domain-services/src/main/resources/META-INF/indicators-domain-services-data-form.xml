<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <!-- Setting of the URL of the XML file used for the data form -->
    <bean   id="staticDataFormInitializer"
            class="org.springframework.beans.factory.config.MethodInvokingFactoryBean"> 
        
        <property   name="staticMethod" 
                    value="org.esco.indicators.services.form.DataFormProvider.setDataFormFileUrl"/>
        
        <property name="arguments">
            <list>
                <value>${dataForm.url}</value>
            </list>
        </property>
    </bean>
    
    <bean   id="dataFormService" 
            class="org.esco.indicators.services.form.DataFormServiceImpl" />
            
    <bean   id="resultFormService" 
            class="org.esco.indicators.services.form.ResultFormServiceImpl">
            <property name="accountStatisticService" ref="accountActivationStatisticService"/>
            <property name="establishmentService" ref="establishmentService"/>
            <property name="portalConnectionStatisticService" ref="portalConnectionStatisticService"/>
    </bean>  
</beans>