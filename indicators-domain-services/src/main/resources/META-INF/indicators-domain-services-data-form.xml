<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<!-- /properties/i18n/i18n.xml The configuration file for i18n services. 
		This file is referenced by /properties/applicationContext.xml. -->

    <!-- Setting of the URL of the XML file used for the data form -->
    <bean   id="staticDataFormInitializer"
            class="org.springframework.beans.factory.config.MethodInvokingFactoryBean"> 
        
        <property   name="staticMethod" 
                    value="org.esco.indicators.services.form.DataFormProvider.setDataFormFileUrl"/>
        
        <property name="arguments">
            <list>
                <value>${dataForm.url}</value>
            </list>
        </property>
    </bean>

</beans>