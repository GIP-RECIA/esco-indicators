<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <!-- Service for the page containing the form about accounts statistics -->
    <bean   id="dataFormAccountProvider"
            class="org.esco.indicators.services.form.DataFormProvider">
        <constructor-arg index="0" value="${dataFormAccount.url}" />
    </bean>
    
    <bean   id="dataFormAccountService" 
            class="org.esco.indicators.services.form.DataFormServiceImpl">
           <property name="dataFormProvider" ref="dataFormAccountProvider" /> 
    </bean>
    
    <!-- Service for the page containing the form about services statistics -->
    <bean   id="dataFormServiceProvider"
            class="org.esco.indicators.services.form.DataFormProvider">
        <constructor-arg index="0" value="${dataFormService.url}" />
    </bean>
    
    <bean   id="dataFormServiceService" 
            class="org.esco.indicators.services.form.DataFormServiceImpl">
           <property name="dataFormProvider" ref="dataFormServiceProvider" /> 
    </bean>
            
    <!-- Service for the result page -->
    <bean   id="resultFormService" 
            class="org.esco.indicators.services.form.ResultFormServiceImpl">
            <property name="accountStatisticService" ref="accountActivationStatisticService"/>
            <property name="establishmentService" ref="establishmentService"/>
            <property name="portalConnectionStatisticService" ref="portalConnectionStatisticService"/>
    </bean>  
</beans>